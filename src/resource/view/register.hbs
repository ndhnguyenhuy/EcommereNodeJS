
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
  <title>TM-Shop Đăng Ký</title>
</head>
<body>
<div class="fixed-top w-100 h-100 content">
  <div class="container">
  {{!-- <form method="post" action="/register/create" id="form-regis"> --}}
    <div class="box-form">
      <div class="auth-form1">
        <div class="auth_container">
          <div class="auth-form__header">
            <h3 class="header-form__heading">Đăng ký</h3>
            <a href="/login" class="auth-form__goform-btn">Đăng nhập</a>
          </div>
          <form method="post" action="/register/create" id="form-regis">
           <div class="auth-form__form">
            <div class="auth-form__group">
              <input
                name="useremail"
                type="email"
                class="auth-form__input"
                id="newEmail"
                placeholder="Email của bạn"
              />
              <span class="form-message"></span>
            </div>
            <div class="auth-form__group">
              <input
                name="username"
                type="text"
                class="auth-form__input"
                id="username"
                placeholder="Tên Đăng Nhập"
              />
              <span class="form-message"></span>
            </div>
            <div class="auth-form__group">
              <input
                name="password"
                type="password"
                class="auth-form__input"
                placeholder="Nhập mật khẩu của bạn"
                id="password"
              />
              <span class="form-message"></span>
            </div>
            <div class="auth-form__group">
              <input
                type="password"
                class="auth-form__input"
                placeholder="Nhập lại mật khẩu của bạn"
                id="repassword"
              />
              <span class="form-message"></span>
            </div>
            <div class="auth-form__note">
              <p class="auth-form__policy-text">
                Bạn đồng ý với TM shop về
                <a href="" class="auth-form__policy-link">Điều khoản dịch vụ
                </a>
                <span>&</span>
                <a href="" class="auth-form__policy-link">Chính sách bảo mật</a>
              </p>
            </div>
            <div class="auth-form__control">
              {{!-- <button class="btn">TRỞ LẠI</button> --}}
              <button class="submit-btn btn btn-danger">ĐĂNG KÝ</button>
            </div>
          </div></form>
         
        </div>
        <div class="link-socials">
          <a href="" class="link__icon-face link--size">
            <i class="link-socials--icon fab fa-facebook-square"></i>
            Kết nối với Facebook
          </a>
          <a href="" class="link__icon--google link--size">
            <i class="link-socials--icon fab fa-google"></i>
            Kết nối với Google
          </a>
        </div>
      </div>
    </div>
  </form>
</div>
</div>
  
</body>
</html>

<script src="/js/Validate.js"></script>

<script>
  Validator({ form: "#form-regis", errSelector: ".form-message",
  formGroupSelector: ".auth-form__group", rules: [
  Validator.isRequired("#username","Tên đăng nhập của bạn "),
  Validator.isRequired("#newEmail","Vui lòng nhập email"),
  Validator.isEmail("#newEmail", "Vui lòng nhập email hợp lệ"),
  Validator.minLength("#password", 8), Validator.isRequired("#password"),
  Validator.isRequired("#repassword", ), Validator.isConfirmed( "#repassword",
  function () { return document.querySelector(" #form-regis #password").value;
  }, "Mật khẩu nhập lại không chính xác" ),],onSubmit: function
  (data){console.log(data);}})

</script>